---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/josenetoqa" target="_blank">
				<span class="sr-only">Go to Astro's GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<a href="https://www.linkedin.com/in/jdaneto" target="_blank">
				<span class="sr-only">Follow on LinkedIn</span>
				<svg viewBox="0 0 448 512" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M100.28 448H7.4V148.9h92.88zm-46.44-338C24 110 0 85.9 0 57.2 0 25.6 24.6 0 55.6 0s55.6 25.6 55.6 57.2c0 28.7-24.6 52.8-55.6 52.8zM447.8 448h-92.68V302.4c0-34.6-12.4-58.2-43.4-58.2-23.7 0-37.8 15.9-44 31.2-2.3 5.6-2.8 13.4-2.8 21.2V448h-92.68s1.2-239.6 0-264.1h92.68v37.4c-.2.3-.5.7-.7 1h.7v-1c12.3-19 34.3-46.2 83.4-46.2 60.8 0 106.4 39.6 106.4 124.7V448z"
					></path>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background:linear-gradient(var(--gray-gradient)) no-repeat;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5); /* Sombra suave */
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.social-links a {
		color: rgb(var(--gray));
		transition: color 0.3s ease, transform 0.3s ease; /* Transição suave */
	}
	.social-links a:hover {
		color: var(--accent); /* Cor de destaque ao passar o mouse */
		transform: scale(1.1); /* Leve aumento ao passar o mouse */
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
